    <h1 style="margin-left: 100px; margin-right: 100px;">Add Menu Drink</h1>
    <hr>
    <div style="padding-left: 50px; padding-right: 50px; padding-top: 30px;" class="rounded" id="add-drink">
        <form id="add-new-item" action="/add-drink" method="POST" enctype="multipart/form-data">
            <table>
                <tr>
                    <th width="200">Select Image</td>
                    <th width="200">Name</td>
                    <th width="200">Description</td>
                    <th width="200">Price</td>
                    <th width="200">Drink Type</th>
                </tr>
                <tr>
                    <td>
                        <input type="file" id="add-file" name="add-new-item-image" accept="image/*">
                    </td>
                    <td>
                        <input type="text" id="add-name" name="add-new-item-name">
                    </td>
                    <td>
                        <textarea id="add-description" name="add-new-item-description" rows="1" cols="20"></textarea>
                    </td>
                    <td>
                        <input type="text" id="add-price" name="add-new-item-price">
                    </td>
                    <td style="display: flex; flex-direction: column;">
                        <select id="add-new-item-type" name="add-new-item-type">
                            <option value="s">Signature Drink</option>
                            <option value="c">Coffee</option>
                            <option value="t">Tea</option>
                            <option value="i">Ice Blended</option>
                        </select>
                    </td>
                </tr>
            </table>
            <button type="submit" style="margin-top: 10px; margin-bottom: 10px;">Submit</button>
        </form>

